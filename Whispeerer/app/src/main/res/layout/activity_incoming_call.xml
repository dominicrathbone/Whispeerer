<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/from_username_calling_text"
        android:id="@+id/fromUsernameCallingText"
        android:layout_marginTop="110dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/accept_button"
        android:id="@+id/acceptButton"
        android:layout_below="@+id/fromUsernameCallingText"
        android:layout_marginTop="51dp"
        android:layout_alignLeft="@+id/fromUsernameCallingText"
        android:layout_alignStart="@+id/fromUsernameCallingText"
        android:layout_alignRight="@+id/fromUsernameCallingText"
        android:layout_alignEnd="@+id/fromUsernameCallingText" />

    <Button
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="@string/decline_button"
        android:id="@+id/declineButton"
        android:layout_below="@+id/acceptButton"
        android:layout_marginTop="33dp"
        android:layout_alignLeft="@+id/acceptButton"
        android:layout_alignStart="@+id/acceptButton"
        android:layout_alignRight="@+id/acceptButton"
        android:layout_alignEnd="@+id/acceptButton" />

</RelativeLayout>
